import com.cramsan.petproject.appcore.model.AnimalType;

CREATE TABLE Description (
	id	INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
	plant_id	INTEGER NOT NULL,
	animal_id	INTEGER AS AnimalType NOT NULL,
	locale TEXT NOT NULL,
	description	TEXT NOT NULL,
    FOREIGN KEY(plant_id) REFERENCES Plant(id)
);

getDescription:
SELECT * FROM Description WHERE plant_id == ? AND animal_id == ? AND locale == ?;

getAllDescription:
SELECT * FROM Description;

insert:
INSERT OR REPLACE INTO Description(id, plant_id, animal_id, description, locale) VALUES (?, ?, ?, ?, ?);

insertNew:
INSERT INTO Description(plant_id, animal_id, description, locale) VALUES (?, ?, ?, ?);

deleteAll:
DELETE FROM Description;