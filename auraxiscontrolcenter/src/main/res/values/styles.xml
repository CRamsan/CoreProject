<resources>

    <!-- Base application theme. -->
    <style name="PS2Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="PS2Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="PS2Theme" />

    <style name="BaseAppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:background">@color/BLACK</item>
    </style>

    <style name="BaseToolBar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/frame_title</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="BaseContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ActionBarButtonStyle">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/ps2_button</item>
        <item name="android:textColor">@color/WHITE</item>
    </style>

    <style name="FragmentBottomStyle">
        <item name="android:background">@drawable/frame_bottom</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="FragmentCenterStyle">
        <item name="android:background">@drawable/frame_center</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="LayoutFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/frame_module</item>
    </style>

    <style name="LayoutFillParentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/ps2_button_bold_normal</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="rippleColor">@color/highlight</item>
    </style>

    <style name="GreenButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/ps2_button_green_normal</item>
    </style>

    <color name="BLACK">#000000</color>
    <color name="WHITE">#ffffff</color>

</resources>