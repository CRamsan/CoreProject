<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="8dp"
              android:background="@color/colorLight"
              android:layout_margin="2dp"
              android:id="@+id/plant_list_view_layout"
              tools:background="@drawable/plant_list_view_background_dangerous">
    <TextView
            android:id="@+id/plant_list_view_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Cape Marigold"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_h2"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"/>
    <TextView
            android:id="@+id/plant_list_view_sub_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="(Africanus Violetus)"
            android:textStyle="italic"
            android:textSize="@dimen/text_size_content"
            android:lines="1"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"/>

</LinearLayout>
