<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="8dp"
              android:layout_margin="2dp"
              android:id="@+id/plant_list_view_layout"
              tools:background="@drawable/plant_list_view_background_dangerous">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/plant_list_view_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:ellipsize="end"
                android:lines="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/text_size_h2"
                android:textStyle="bold"
                tools:text="Cape Marigold"/>
        <TextView
                android:id="@+id/plant_list_view_sub_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:ellipsize="end"
                android:lines="1"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/text_size_content"
                android:textStyle="italic"
                tools:text="(Africanus Violetus)"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/plant_list_view_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/avatars"/>

</LinearLayout>
