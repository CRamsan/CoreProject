<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="4dp"
              android:background="#CCFCCD"
              android:layout_margin="2dp">
    <TextView
            android:id="@+id/viewPlantHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Cape Marigold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end" android:layout_marginEnd="2dp" android:layout_marginStart="2dp"/>
    <TextView
            android:id="@+id/viewPlantSubHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="(Africanus Violetus)"
            android:textStyle="italic"
            android:textSize="14sp"
            android:lines="1"
            android:layout_gravity="center_vertical"
            android:ellipsize="end" android:layout_marginEnd="2dp" android:layout_marginStart="2dp"/>
    <ImageView
            android:id="@+id/viewPlantImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside" android:layout_marginEnd="2dp" android:layout_marginStart="2dp"/>

</LinearLayout>
