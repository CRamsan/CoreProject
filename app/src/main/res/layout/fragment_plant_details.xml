<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/plantdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".plantdetails.PlantDetailsFragment">

    <TextView
            android:id="@+id/plant_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlantDetailsFragment"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plant_details_subtitle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plant_details_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars"
            android:id="@+id/plant_details_image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plant_details_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plant_details_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plant_details_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
