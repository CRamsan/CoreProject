<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorOnBackground</item>
        <item name="colorPrimaryDark">@color/colorBackground</item>
        <item name="colorAccent">@color/colorSafe</item>
        <item name="colorControlActivated">@color/colorSafe</item>
        <item name="colorControlHighlight">@color/colorSafe</item>
    </style>

    <style name="BaseCoordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BaseAppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseNavigationDrawerLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="BaseToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="BaseContentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="MainMenuButtonStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:textColor">@drawable/main_button_text_color</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>
