<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="com.cramsan.petproject.plantdetails.PlantDetailsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/plant_details_view"
            style="@style/BaseContentLayout">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ProgressBar
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/plant_details_image_loading"
                        app:layout_constraintTop_toTopOf="@+id/plant_details_image"
                        app:layout_constraintBottom_toBottomOf="@+id/plant_details_image"
                        app:layout_constraintStart_toStartOf="@+id/plant_details_image"
                        app:layout_constraintEnd_toEndOf="@+id/plant_details_image"/>
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="256dp"
                        tools:src="@tools:sample/avatars"
                        android:id="@+id/plant_details_image"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"
                        android:contentDescription="@string/plant_details_empty_image_description"/>
                <TextView
                        android:id="@+id/plant_details_image_source"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.observablePlantImageSource}"
                        android:background="@color/colorAccent" android:ellipsize="end"
                        android:maxLines="1" android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textAlignment="textEnd"
                        app:layout_constraintBottom_toTopOf="@+id/plant_details_divider_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" tools:text="Source: https://......."/>
                <View
                        android:id="@+id/plant_details_divider_1"
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintTop_toBottomOf="@+id/plant_details_image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/plant_details_scientific_name"
                        android:text="@{viewModel.observablePlantScientificName}"
                        tools:text="Africanus Violetus"
                        android:textSize="@dimen/text_size_h1"
                        app:layout_constraintTop_toBottomOf="@+id/plant_details_divider_1"
                        android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        tools:text="Purple Flower Family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@{viewModel.observablePlantFamily}"
                        android:textSize="@dimen/text_size_h2"
                        android:id="@+id/plant_details_family"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/plant_details_scientific_name"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        tools:text="Common names: Peacock Flower, Barbados Pride, Poinciana, Pride of Barbados, Barbados Pride, Poinciana, Pride of Barbados, Barbados Pride, Poinciana, Pride of Barbados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/plant_details_common_names"
                        android:text="@{viewModel.observablePlantCommonNames}"
                        android:visibility="@{viewModel.observablePlantCommonNamesVisibility}"
                        android:layout_margin="8dp"
                        android:textSize="@dimen/text_size_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/plant_details_family"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
                <View
                        android:id="@+id/plant_details_divider_2"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/plant_details_common_names"
                        android:layout_marginTop="8dp" android:layout_width="match_parent"/>
                <TextView
                        tools:text="Dangerous!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/plant_details_danger"
                        android:text="@{viewModel.observableDangerousText}"
                        android:layout_margin="8dp" android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@+id/plant_details_divider_2"
                        android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/plant_details_description"
                        android:text="@{viewModel.observablePlantDescription}"
                        tools:text="Other stuff Peacock Flower, Barbados Pride, Poinciana, Pride of Barbados, Barbados Pride, Poinciana, Pride of Barbados, Barbados Pride, Poinciana, Pride of Barbados Other stuff Peacock Flower, Barbados Pride, Poinciana, Pride of Barbados, Barbados Pride, Poinciana, Pride of Barbados, Barbados Pride, Poinciana, Pride of Barbados"
                        android:layout_margin="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/plant_details_danger"
                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"/>
                <TextView
                        tools:text="Source: https://thisiosanexample.com/longurl/withsome?randomText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/plant_details_source" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:text="@{viewModel.observableSource}"
                        app:layout_constraintTop_toBottomOf="@+id/plant_details_description"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" android:textAlignment="textStart"
                        android:ellipsize="end" android:textStyle="bold"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/plant_feedback_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:srcCompat="@drawable/ic_info"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>