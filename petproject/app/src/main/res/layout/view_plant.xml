<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:id="@+id/plant_list_view_layout">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="8dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/plant_list_view_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="@dimen/text_size_h2"
                    android:textStyle="bold"
                    tools:text="Cape Marigold"/>
            <TextView
                    android:id="@+id/plant_list_view_sub_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="@dimen/text_size_content"
                    android:textStyle="italic"
                    tools:text="(Africanus Violetus)"/>
        </LinearLayout>
        <ImageView
                android:id="@+id/plant_list_view_icon_cat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_cat"
                tools:background="@drawable/plant_view_item_safe"/>
        <ImageView
                android:id="@+id/plant_list_view_icon_dog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_dog"
                tools:background="@drawable/plant_view_item_danger"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>